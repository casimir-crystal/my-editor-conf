{
  // Editor default options
  "diffEditor.ignoreTrimWhitespace": false,
  "workbench.colorTheme": "One Dark Pro",
  "explorer.confirmDelete": false,
  "kite.showWelcomeNotificationOnStartup": false,
  "git.autofetch": true,
  "git.enableSmartCommit": true,
  "workbench.iconTheme": "vscode-icons",
  "editor.fontFamily": "'FiraCode NF', 'Sarasa Mono CL', Consolas, 'Courier New', monospace",
  "editor.fontSize": 13,
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.fontFamily": "'FiraCode NF', 'Sarasa Mono CL', Consolas, 'Courier New', monospace",
  "update.enableWindowsBackgroundUpdates": true,
  "emmet.triggerExpansionOnTab": true,
  "editor.quickSuggestions": {
    "other": true,
    "comments": true,
    "strings": true
  },
  "editor.tabCompletion": "on",

  // VSCode Vim settings
  "vim.easymotion": true,
  "vim.incsearch": true,
  // "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.sneak": true,
  "vim.sneakUseIgnorecaseAndSmartcase": true,
  "vim.autoSwitchInputMethod.enable": true,
  "vim.autoSwitchInputMethod.defaultIM": "1033",
  "vim.autoSwitchInputMethod.obtainIMCmd": "C:\\Users\\casimir\\AppData\\Local\\IMSelect\\im-select.exe",
  "vim.autoSwitchInputMethod.switchIMCmd": "C:\\Users\\casimir\\AppData\\Local\\IMSelect\\im-select.exe {im}",

  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [">"],
      "commands": ["editor.action.indentLines"]
    },
    {
      "before": ["<"],
      "commands": ["editor.action.outdentLines"]
    },
    {
      "before": ["Z", "Z"],
      "commands": [":wq"]
    }
  ],
  "vim.leader": ",",
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false,
    "<C-w>": false
  },

  // VSCode backgounrd settings
  "background.enabled": true,
  "background.useDefault": false, //是否使用默认图片
  "background.useFront": false,
  "background.customImages": [
    "file:///C:/Users/casimir/Pictures/Pictures/Images/touhou/魔理沙/62540840_p0.png" //图片的路径
  ],
  "background.style": {
    "pointer-events": "none",
    "width": "100%",
    "height": "100%",
    "background-position": "center",
    "background-size": "100%,100%",
    "background.repeat": "no-repeat",
    "opacity": 0.2
  },

  // Python lint options
  "python.linting.pylamaEnabled": true,
  "window.zoomLevel": 0,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.wordWrap": "on",
  "workbench.settings.editor": "json",
  "python.showStartPage": false,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.lineNumbers": "relative"
}
